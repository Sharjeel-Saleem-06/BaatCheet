# ============================================
# BaatCheet Backend Environment Configuration
# Phase 4: Production Ready with Clerk Auth
# ============================================

# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
PORT=5001
API_VERSION=v1

# ============================================
# Database Configuration
# ============================================
# PostgreSQL Connection
DATABASE_URL=postgresql://baatcheet_user:BaatCheet2024Secure!@localhost:5432/baatcheet?schema=public

# Redis Connection (Optional - for caching)
REDIS_URL=redis://localhost:6379

# ============================================
# Clerk Authentication (Primary)
# Get credentials at: https://dashboard.clerk.com
# ============================================
CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key
CLERK_SECRET_KEY=sk_test_your_secret_key
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# Legacy JWT Authentication (Backup)
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug

# ============================================
# AI Configuration
# ============================================
DEFAULT_MODEL=llama-3.3-70b-versatile
MAX_CONTEXT_MESSAGES=50
MAX_TOKENS=8000

