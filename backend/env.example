# ============================================
# BaatCheet Backend Environment Variables
# ============================================

# Server Configuration
NODE_ENV=development
PORT=5001
API_VERSION=v1

# PostgreSQL Database
DATABASE_URL="postgresql://baatcheet_user:BaatCheet2024Secure!@localhost:5432/baatcheet?schema=public"

# Redis (for caching and context management)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-chars
JWT_EXPIRES_IN=7d

# ============================================
# AI Provider API Keys
# ============================================

# Groq API Keys (10 keys for load balancing - 14,400 requests/day each)
GROQ_API_KEY_1=gsk_your_groq_api_key_1
GROQ_API_KEY_2=gsk_your_groq_api_key_2
GROQ_API_KEY_3=gsk_your_groq_api_key_3
GROQ_API_KEY_4=gsk_your_groq_api_key_4
GROQ_API_KEY_5=gsk_your_groq_api_key_5
GROQ_API_KEY_6=gsk_your_groq_api_key_6
GROQ_API_KEY_7=gsk_your_groq_api_key_7
GROQ_API_KEY_8=gsk_your_groq_api_key_8
GROQ_API_KEY_9=gsk_your_groq_api_key_9
GROQ_API_KEY_10=gsk_your_groq_api_key_10

# Together AI (Backup Provider)
TOGETHER_API_KEY=your_together_api_key

# DeepSeek (Backup Provider)
DEEPSEEK_API_KEY=your_deepseek_api_key

# OCR.space API (for image text extraction)
OCR_SPACE_API_KEY=your_ocr_space_api_key

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug

# ============================================
# AI Model Configuration
# ============================================
DEFAULT_MODEL=llama-3.1-70b-versatile
MAX_CONTEXT_MESSAGES=50
MAX_TOKENS=8000
