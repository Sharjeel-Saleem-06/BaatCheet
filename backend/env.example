# ============================================
# BaatCheet Backend Environment Variables
# Copy this file to .env and fill in your values
# ============================================

# Server Configuration
NODE_ENV=development
PORT=5001
API_VERSION=v1

# PostgreSQL Database
DATABASE_URL="postgresql://baatcheet_user:YOUR_PASSWORD@localhost:5432/baatcheet?schema=public"

# Redis (for caching - optional)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-chars
JWT_EXPIRES_IN=7d

# ============================================
# GROQ API Keys (Primary Provider)
# Get keys from: https://console.groq.com/
# Each key: ~14,400 requests/day
# Supports up to 20 keys for load balancing
# ============================================
GROQ_API_KEY_1=gsk_your_groq_api_key_1
GROQ_API_KEY_2=gsk_your_groq_api_key_2
GROQ_API_KEY_3=gsk_your_groq_api_key_3
GROQ_API_KEY_4=gsk_your_groq_api_key_4
GROQ_API_KEY_5=gsk_your_groq_api_key_5
GROQ_API_KEY_6=gsk_your_groq_api_key_6
GROQ_API_KEY_7=gsk_your_groq_api_key_7
GROQ_API_KEY_8=gsk_your_groq_api_key_8
GROQ_API_KEY_9=gsk_your_groq_api_key_9
GROQ_API_KEY_10=gsk_your_groq_api_key_10
# Add more keys as needed (up to 20)

# ============================================
# DeepSeek API Keys (Backup Provider)
# Get keys from: https://platform.deepseek.com/
# ============================================
DEEPSEEK_API_KEY_1=sk-your_deepseek_key_1
DEEPSEEK_API_KEY_2=sk-your_deepseek_key_2
DEEPSEEK_API_KEY_3=sk-your_deepseek_key_3
DEEPSEEK_API_KEY_4=sk-your_deepseek_key_4

# ============================================
# OpenRouter (100+ models - Recommended!)
# Get key from: https://openrouter.ai/keys
# $5 free credit on signup
# ============================================
OPENROUTER_API_KEY=sk-or-v1-your_openrouter_key

# ============================================
# Hugging Face (Open Source Models)
# Get token from: https://huggingface.co/settings/tokens
# ============================================
HUGGINGFACE_API_KEY=hf_your_huggingface_token

# ============================================
# Mistral AI (Optional)
# Get key from: https://console.mistral.ai/
# ============================================
MISTRAL_API_KEY=your_mistral_key

# ============================================
# Cohere (Optional)
# Get key from: https://dashboard.cohere.com/
# ============================================
COHERE_API_KEY=your_cohere_key

# ============================================
# Google AI / Gemini (Optional)
# Get key from: https://aistudio.google.com/
# ============================================
GOOGLE_AI_API_KEY=your_google_ai_key

# ============================================
# OCR.space (For image text extraction)
# Get key from: https://ocr.space/ocrapi
# 500 requests/day free
# ============================================
OCR_SPACE_API_KEY=your_ocr_space_key

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug

# ============================================
# AI Model Configuration
# ============================================
DEFAULT_MODEL=llama-3.3-70b-versatile
MAX_CONTEXT_MESSAGES=50
MAX_TOKENS=8000
